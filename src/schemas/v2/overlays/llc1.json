{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trust.propdata.org.uk/schemas/v2/overlays/llc1.json",
  "properties": {
    "propertyPack": {
      "properties": {
        "searches": {
          "items": {
            "oneOf": [
              null,
              {
                "properties": {
                  "results": {
                    "items": {
                      "oneOf": [
                        {
                          "required": [
                            "localLandCharges"
                          ],
                          "properties": {
                            "localLandCharges": {
                              "items": {
                                "required": [
                                  "part",
                                  "partTitle",
                                  "chargeDescription",
                                  "originatingAuthority",
                                  "inspectionAddress",
                                  "registrationDate"
                                ]
                              }
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}