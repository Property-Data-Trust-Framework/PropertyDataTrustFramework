{
  "openapi": "3.0.3",
  "info": {
    "title": "Property Data Trust Framework API",
    "version": "1.2.0",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "description": "This API defines how participants in the UK Property Data Trust Framework can securely share property data, together with the verifiable provenance of that data. The API is built around a variation of OpenID Connect Verified Claims schema."
  },
  "servers": [
    {
      "url": "http://api.pdtf-example.com",
      "description": "Example PDTF data source"
    }
  ],
  "paths": {
    "/properties/{uprn}/claims": {
      "parameters": [
        {
          "$ref": "#/components/parameters/uprn"
        }
      ],
      "get": {
        "summary": "Get a list of claims for a given UPRN",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://homebuyingandsellinggroup.co.uk/schemas/pdtf-verified-claims.json#verified_claims"
                }
              }
            }
          },
          "204": {
            "description": "No Content - no claims are available for this property"
          }
        },
        "operationId": "getClaims",
        "parameters": []
      },
      "post": {
        "summary": "Add claims",
        "operationId": "getClaims",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request - the supplied claims contain one or more validation errors"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "description": "Add one or more new Claims for this UPRN",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://homebuyingandsellinggroup.co.uk/schemas/pdtf-verified-claims.json#verified_claims"
              }
            }
          }
        }
      }
    },
    "/properties/{uprn}/getState": {
      "parameters": [
        {
          "$ref": "#/components/parameters/uprn"
        }
      ],
      "get": {
        "summary": "Get latest state of data",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "204": {
            "description": "No Content - no claims are available for this property"
          },
          "": {
            "description": ""
          }
        },
        "operationId": "getCurrentState",
        "description": "Retrieve a JSON representation of the state of the property data when all claims to date are applied.",
        "parameters": []
      }
    },
    "/properties/{uprn}/getStateAsHTML": {
      "parameters": [
        {
          "$ref": "#/components/parameters/uprn"
        }
      ],
      "get": {
        "summary": "Get the current state rendered as HTML",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string",
                  "description": "HTML representation of property claims"
                }
              }
            }
          },
          "204": {
            "description": "No Content - no claims are available for this property"
          }
        },
        "operationId": "getStateAsHTML",
        "description": "Get the current state rendered as HTML, using schema titles or - if not present - property names to create headings.",
        "parameters": []
      }
    },
    "/properties/{uprn}/subscribe": {
      "parameters": [
        {
          "$ref": "#/components/parameters/uprn"
        }
      ],
      "post": {
        "summary": "Create a new webhook subscription for this UPRN",
        "operationId": "webhookSubscribe",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "callbackUrl": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        },
        "callbacks": {
          "newClaims": {
            "{$request.body#/callbackUrl}": {
              "post": {
                "requestBody": {
                  "required": "true",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "https://homebuyingandsellinggroup.co.uk/schemas/pdtf-verified-claims.json#verified_claims"
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "Please send a 200 response to acknowledge the callback and prevent retries"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete webhook",
        "operationId": "webhookUsubscribe",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Delete webhook for this UPRN for the current authenticated user, if any"
      }
    }
  },
  "components": {
    "parameters": {
      "uprn": {
        "name": "uprn",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer",
          "example": 303789
        },
        "description": "Unique Property Reference Number"
      }
    }
  }
}
